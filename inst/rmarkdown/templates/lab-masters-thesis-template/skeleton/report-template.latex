  }{}{\printtext{\bibstring{in}\intitlepunct}}%
}

% Remove some fields from books and inbooks
\AtEveryBibitem{%
\ifentrytype{article}{
    \clearfield{url}%
    \clearfield{urldate}%
}{}
\ifentrytype{book}{
    \clearfield{url}%
    \clearfield{urldate}%
    \clearfield{review}%
