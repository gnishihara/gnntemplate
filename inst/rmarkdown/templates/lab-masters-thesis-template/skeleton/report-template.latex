% This ensures that the given-name is not abbreviated for Japanese references.
\DeclareNameFormat{family-given}{%
  \iffieldequalstr{langid}{japanese}{
    \usebibmacro{name:family-given}%
     {\namepartfamily}%
     {\namepartgiven}%
     {\namepartprefix}%
     {\namepartsuffix}%
    }%
    {\ifgiveninits{%
    \usebibmacro{name:family-given}%
